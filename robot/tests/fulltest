
# usage: fulltest <mainReportDirectory> <hostconfig> <hostname>
# fulltest reports centos 123.4.5.6:8080

if [ "$#" -ne 3 ]; then
    echo " usage: fulltest <mainReportDirectory> <hostconfig> <hostname>"
    echo "eample: fulltest reports centos 123.4.5.6:8080"
    exit 1
fi


declare hostconfig=$2
declare reportDir=$1

declare -a browsers=("IE" "Edge" "Firefox" "Chrome") 

for browser in "${browsers[@]}"
do
   python updateJson.py reports/data.json $hostconfig $browser inprogress
   robot --variable BROWSER:$browser --variable GEOSERVERHOST:"localhost:8080" -L debug -x xunit.xml -d $reportDir/$hostconfig/$browser david.robot
   python updateJson.py reports/data.json $hostconfig $browser $?
done
